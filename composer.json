{
    "require": {
        "pimple/pimple": "3.4.*",
        "psr/container": "1.*",
        "slim/psr7": "1.4.*",
        "slim/slim": "4.8.*",
        "smarty/smarty": "3.1.*",
        "twig/twig": "3.3.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.1.*",
        "phpstan/phpstan": "0.12.*",
        "symfony/var-dumper": "5.3.*"
    },
    "autoload": {
        "psr-4": {
            "momentphp\\": "src"
        }
    },
    "scripts": {
        "cs": [
            "php-cs-fixer fix"
        ],
        "sa": [
            "phpstan analyse"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
